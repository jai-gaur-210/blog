<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" id="titlefield" type="text" name="postTitle" autocomplete="off">
        <label>Post</label>
        <textarea class="form-control" id="contentfield" name="postBody" cols="50" rows="5" autocomplete="off"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button> 
</form>

<%- include("partials/footer") -%>